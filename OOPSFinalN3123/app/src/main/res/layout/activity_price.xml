<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="50dp"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="50dp"
    tools:context=".Price">


    <Button
        android:id="@+id/button"
        android:layout_width="100dp"
        android:layout_height="58dp"
        android:layout_below="@+id/inputmessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:onClick="onSend"
        android:text="Search For Delivery Agent" />

    <TextView
        android:id="@+id/inputNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="phone"

        android:isScrollContainer="false"
        android:textColor="#FF5722"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/inputmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputNumber"
        android:layout_alignEnd="@+id/inputNumber"
        android:layout_alignRight="@+id/inputNumber"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:textColor="#FF5722"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/inputotp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="phone"

        android:isScrollContainer="false"
        android:text="Enter OTP"
        android:textColor="#FF5722"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/otptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputotp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="6dp"

        android:ems="10"
        android:inputType="phone"
        android:isScrollContainer="false"
        android:textSize="25sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="148dp"
        android:layout_height="68dp"
        android:layout_below="@+id/otptext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:onClick="onSend2"
        android:text="Confirm Order" />

</RelativeLayout>